{
  "name": "@repo/wallet",
  "version": "0.0.1",
  "private": true,
  "license": "(MIT OR Apache-2.0)",
  "type": "module",
  "scripts": {
    "ledger:clone": "stat ledger-penumbra/Makefile || git clone https://github.com/zondax/ledger-penumbra ledger-penumbra --revision v1.0.2 --depth 1 --shallow-submodules --recursive",
    "ledger:make": "cd ledger-penumbra && make",
    "ledger:snapshots": "vitest run || cp -rv snapshots-tmp/* snapshots/",
    "lint": "eslint \"**/*.ts*\"",
    "pretest": "$npm_execpath run ledger:clone && $npm_execpath run ledger:make",
    "test": "vitest run"
  },
  "exports": {
    ".": "./src/wallet.ts"
  },
  "dependencies": {
    "@penumbra-zone/bech32m": "18.0.0",
    "@penumbra-zone/protobuf": "11.0.0"
  },
  "devDependencies": {
    "@ledgerhq/devices": "^8.4.7",
    "@ledgerhq/hw-transport-webusb": "^6.29.7",
    "@penumbra-zone/wasm": "53.0.0",
    "@repo/encryption": "workspace:*",
    "@types/chrome": "0.0.270",
    "@types/w3c-web-usb": "^1.0.10",
    "@zondax/ledger-js": "^1.2.0",
    "@zondax/ledger-penumbra": "^1.0.0",
    "@zondax/zemu": "^0.60.0"
  }
}
