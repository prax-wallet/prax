{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV", "MODE", "CHROMIUM_PROFILE"],
  "tasks": {
    "//#clean:vitest-mjs": {
      "cache": false
    },
    "//#format:prettier": {
      "cache": false
    },
    "//#format:syncpack": {
      "cache": false
    },
    "//#lint:prettier": {
      "cache": false
    },
    "//#lint:syncpack": {
      "cache": false
    },
    "build": {
      "dependsOn": ["compile", "^build"],
      "env": ["PRAX"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false,
      "dependsOn": ["//#clean:vitest-mjs"]
    },
    "compile": {
      "inputs": ["crate/src/**", "crate/Cargo.toml", "crate/Cargo.lock"],
      "outputs": ["wasm/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^compile"],
      "persistent": true
    },
    "format": {
      "cache": false,
      "dependsOn": ["//#format:syncpack", "//#format:prettier"]
    },
    "host": {
      "cache": false,
      "dependsOn": ["build"],
      "persistent": true
    },
    "lint": {
      "dependsOn": ["//#lint:syncpack", "//#lint:prettier", "compile", "^build"],
      "inputs": ["**/*.ts", "**/*.tsx", "wasm/index*.ts", "package.json"]
    },
    "lint:strict": {
      "dependsOn": ["//#lint:syncpack", "//#lint:prettier", "compile", "^build"],
      "inputs": ["**/*.ts", "**/*.tsx", "wasm/index*.ts", "package.json"]
    },
    "test": {
      "cache": false,
      "dependsOn": ["compile"]
    }
  }
}
